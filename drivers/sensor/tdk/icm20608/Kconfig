# ICM20608 Six-Axis Motion Tracking device configuration options

# Copyright (c) 2016 Intel Corporation
# SPDX-License-Identifier: Apache-2.0

menuconfig ICM20608
	bool "ICM20608 Six-Axis Motion Tracking Device"
	default y
	depends on DT_HAS_INVENSENSE_ICM20608_ENABLED
	select I2C
	help
	  Enable driver for ICM20608 I2C-based six-axis motion tracking device.

if ICM20608

choice
	prompt "Trigger mode"
	default ICM20608_TRIGGER_GLOBAL_THREAD
	help
	  Specify the type of triggering to be used by the driver.

config ICM20608_TRIGGER_NONE
	bool "No trigger"

config ICM20608_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select ICM20608_TRIGGER

config ICM20608_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select ICM20608_TRIGGER

endchoice

config ICM20608_TRIGGER
	bool

config ICM20608_THREAD_PRIORITY
	int "Thread priority"
	depends on ICM20608_TRIGGER_OWN_THREAD
	default 10
	help
	  Priority of thread used by the driver to handle interrupts.

config ICM20608_THREAD_STACK_SIZE
	int "Thread stack size"
	depends on ICM20608_TRIGGER_OWN_THREAD
	default 1024
	help
	  Stack size of thread used by the driver to handle interrupts.

config ICM20608_ACCEL_FS
	int "Accelerometer full-scale range"
	default 2
	help
	  Magnetometer full-scale range.
	  An X value for the config represents a range of +/- X g. Valid
	  values are 2, 4, 8 and 16.

config ICM20608_GYRO_FS
	int "Gyroscope full-scale range"
	default 250
	help
	  Gyroscope full-scale range.
	  An X value for the config represents a range of +/- X degrees/second.
	  Valid values are 250, 500, 1000, 2000.

endif # ICM20608
